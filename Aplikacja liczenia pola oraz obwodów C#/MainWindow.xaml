        <Button x:Name="butC" Content="Dodaj C" HorizontalAlignment="Left" Margin="349,139,0,0" VerticalAlignment="Top" Width="75" Click="butDodaj_Click" CommandParameter="C"/>

    </Grid>
</Window>
